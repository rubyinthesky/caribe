<% provide(:title, "Log in") %>

<h1>Log in</h1>

<%= form_tag sessions_create_path do |form| %>
  
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>  

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>

<% end %>

